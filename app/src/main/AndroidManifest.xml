<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clothesfortheweather101">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="Одежда по погоде"
        android:roundIcon="@mipmap/ic_launcher1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClothesForTheWeather101">
        <activity
            android:name=".InfoActivity"
            android:exported="false"
            android:label="Справка"/>
        <activity
            android:name=".List"
            android:exported="false"
            android:label="Весь список" />
        <activity
            android:name=".AddLook"
            android:exported="false"
            android:label="Новая запись" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.ClothesContentProvider"
            android:authorities="com.example.clothesfortheweather101"
            android:exported="false" />
    </application>

</manifest>